@model OrderViewModel

@{
    ViewBag.Title = "Create Order";
}

<h1>Create Order</h1>

<div class="row">
    @foreach (Product p in Model.Products)
    {
        <div class="col-md-4 mb-3">
            <form asp-action="AddItem" method="post">
                <div class="card" style="width: 18rem;">
                    <img src="@Url.Content("~/images/" + p?.ImageUrl)" class="card-img-top fixed-image-height" alt="@p.Description" />
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">@p.Price.ToString("C")</p>
                        <input type="hidden" name="prodId" value="@p.ProductId" />
                        <input type="number" name="prodQty" class="form-control mb-2" min="1" value="1" />
                        <button class="btn btn-info" type="submit">Add</button>
                    </div>
                </div>
            </form>
        </div>
    }
</div>
