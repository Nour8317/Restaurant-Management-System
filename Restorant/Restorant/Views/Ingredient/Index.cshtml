@model IEnumerable<Ingredient>
<h1>Ingredient</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Ingredient i in Model){
            <tr>
                <td>@Html.DisplayFor(modelItem => i.Name)</td>
               
            </tr>
        }
    </tbody>
</table>