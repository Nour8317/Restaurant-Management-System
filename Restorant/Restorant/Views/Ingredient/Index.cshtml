@model IEnumerable<Ingredient>
<h1>Ingredient</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Ingredient i in Model){
            <tr>
                <td>@Html.DisplayFor(modelItem => i.Name)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@i.IngredientId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-primary" asp-action="Create">New Ingredient</button>