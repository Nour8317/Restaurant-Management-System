@model IEnumerable<Ingredient>
<h1>Ingredient</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Ingredient i in Model){
            <tr>
                <td>@Html.DisplayFor(modelItem => i.Name)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@i.IngredientId">Details</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@i.IngredientId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<form asp-action="Create" method="get">
    <button class="btn btn-primary" type="submit">New Ingredient</button>
</form>
